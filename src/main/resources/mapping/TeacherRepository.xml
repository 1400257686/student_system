<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zxl.repository.TeacherRepository">
    <!--查询所有教师-->
    <select id="findAll"  resultType="Teacher">
        select * from teacher limit #{start},#{limit}
    </select>
    <!--按工号查询教师-->
    <select id="findbytno"  parameterType="String" resultType="Teacher">
        select * from teacher where t_no=#{tno}
    </select>
    <!--查询教师数量-->
    <select id="count" resultType="java.lang.Integer">
        select count(*) from teacher
    </select>
    <!--按学院查询教师-->
    <select id="findByAcademy"  resultType="Teacher">
        select * from teacher where academy=#{academy} limit #{start},#{limit}
    </select>
    <!--按学院查询教师数量-->
    <select id="countByAcademy" parameterType="java.lang.String" resultType="java.lang.Integer">
        select count(*) from teacher where academy=#{academy}
    </select>
    <!--按工号删除教师-->
    <delete id="deletebytno" parameterType="java.lang.String">
        delete from teacher where t_no=#{tno}
    </delete>
    <!--按工号更新教师-->
    <update id="updatebytno" parameterType="Teacher">
        update teacher set t_name=#{tName},t_sex=#{tSex},academy=#{academy} where t_no=#{tNo}
    </update>
    <!--插入教师-->
    <insert id="insert" parameterType="Teacher">
        insert into teacher values(#{tNo},#{tName},#{tSex},#{academy})
    </insert>
    <cache/>
</mapper>