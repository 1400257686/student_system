<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zxl.repository.ScoreRepository">
    <!--按学号查询成绩单-->
    <select id="findbysno" resultType="Score">
        select s_no,c_no,score from scores where s_no=#{sno} limit #{start},#{limit}
    </select>
    <!--按学号查询课程数量-->
    <select id="countbysno" parameterType="java.lang.String" resultType="java.lang.Integer">
        select count(*) from scores where s_no=#{sno}
    </select>
    <!--无成绩插入数据-->
    <insert id="insertnoscore">
        insert into scores(s_no,c_no) values(#{sno},#{cno})
    </insert>
    <!--插入数据-->
    <update id="update">
        update scores set score=#{score} where s_no=#{sno} and c_no=#{cno}
    </update>
    <!--按课程号查询成绩单-->
    <select id="findbycno" parameterType="java.lang.Integer" resultType="Score">
        select * from scores where c_no=#{cno} limit #{start},#{limit}
    </select>
    <!--按课程号查询成绩数量-->
    <select id="countbycno" parameterType="java.lang.Integer" resultType="java.lang.Integer">
        select count(*) from scores where c_no=#{cno}
    </select>
    <cache/>
</mapper>